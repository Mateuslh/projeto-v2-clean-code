[MASTER]
ignore=.venv

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-branches,
    too-many-statements,
    too-many-public-methods,
    too-many-return-statements,
    duplicate-code

[FORMAT]
max-line-length=120

[DESIGN]
max-args=10
max-locals=20
max-attributes=10
max-returns=10
max-branches=15
max-statements=50

[NAMING]
variable-rgx=[a-z_][a-z0-9_]{0,30}$
argument-rgx=[a-z_][a-z0-9_]{0,30}$
attr-rgx=[a-z_][a-z0-9_]{0,30}$
